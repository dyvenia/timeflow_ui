{
  "scripts": {
    "start": "npm run tw & npm run sync",
    "tw": "npx tailwindcss --output css/styles.css --content site/index.html --watch",
    "sync": "npx browser-sync start --startPath ./site/ --server ./ --files /**/*.html"
  },
  "dependencies": {
    "tailwindcss": "^3.0.23",
    "browser-sync": "^2.27.9"
  }
}
